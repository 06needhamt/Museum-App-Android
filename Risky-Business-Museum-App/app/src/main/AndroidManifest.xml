<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="riskybusiness.riskybusinessmuseumapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".root.Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".root.Activities.HomePageActivity"
            android:label="@string/title_activity_home_page" >
        </activity>
        <activity
            android:name=".root.Activities.QRScannerActivity"
            android:label="QRScannerActivity" >
        </activity>
        <activity
            android:name=".root.Activities.MultiChoiceActivity"
            android:label="@string/title_activity_multi_choice"
            android:parentActivityName=".root.Activities.HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riskybusiness.riskybusinessmuseumapp.root.Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".root.Activities.SingleAnswerActivity"
            android:label="@string/title_activity_single_answer"
            android:parentActivityName=".root.Activities.HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riskybusiness.riskybusinessmuseumapp.root.Activities.HomePageActivity" />
        </activity>
    </application>

</manifest>
