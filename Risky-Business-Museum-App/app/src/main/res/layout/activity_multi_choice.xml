<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="riskybusiness.riskybusinessmuseumapp.root.Activities.MultiChoiceActivity"
    android:background="@drawable/royal_blue_ipad_wallpaper">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Score:"
            android:textColor="@color/White"
            android:id="@+id/McScore"
            android:layout_gravity="right|top"
            android:gravity="center_horizontal|right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Question 1 of n"
            android:textColor="@color/White"
            android:id="@+id/McTrailPosition"
            android:layout_gravity="left|top"
            android:gravity="center_horizontal|left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="The Oba used this to make contact with the spirits of his ancestors"
            android:textColor="@color/White"
            android:id="@+id/multiChoiceQuestion"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="A"
            android:id="@+id/btnMcA"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="B"
            android:id="@+id/btnMcB"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="C"
            android:id="@+id/btnMcC"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="D"
            android:id="@+id/btnMcD"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Skip"
            android:id="@+id/btnMcSkipOrNext"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>
</RelativeLayout>
