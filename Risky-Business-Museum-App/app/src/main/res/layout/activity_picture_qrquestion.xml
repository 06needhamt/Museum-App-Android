<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="riskybusiness.riskybusinessmuseumapp.root.Activities.PictureQRQuestionActivity"
    android:background="@drawable/royal_blue_ipad_wallpaper">


    <TextView
        android:id="@+id/PicQRTrailPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Question 1 of n"
        android:textColor="@color/White"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal|left" />

    <TextView
        android:id="@+id/PicQRScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Score:"
        android:textColor="@color/White"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal|right"
        android:layout_toRightOf="@id/PicQRTrailPosition"/>

    <ImageView
        android:id="@+id/PicQRImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:adjustViewBounds="true"


        android:layout_below="@id/PicQRTrailPosition"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/PicQRQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Question"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:layout_above="@+id/PicQRScannerButton"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"/>


        <ImageButton
        android:id="@+id/PicQRScannerButton"
        android:background="@drawable/transparent__icon_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"

            android:scaleX="2.5"
            android:scaleY="2.5"
        />


        <Button
            android:id="@+id/PicQRNextOrSkipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Skip"
            android:textColor="@color/White"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>
