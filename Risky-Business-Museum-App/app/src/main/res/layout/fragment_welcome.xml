<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:name="riskybusiness.riskybusinessmuseumapp.root.Fragments.ChooseATrailFragment"
    android:id="@+id/WelcomeFragment"
    android:layout_below="@+id/topTableForButtons"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_above="@+id/bottomTableForButtons"
    tools:context="riskybusiness.riskybusinessmuseumapp.root.Fragments.WelcomeFragment"
    android:focusable="false"
    android:background="@drawable/royal_blue_ipad_wallpaper">

    <!-- TODO: Update blank fragment layout -->

    <TextView android:layout_width="match_parent" android:layout_height="122dp"
        android:text="@string/WelcomeTitle"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:id="@+id/WelcomeFragmentTitle"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WelcomeTitle"
        android:layout_gravity="left"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:id="@+id/WelcomeTrailInfo"
        android:gravity="left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WelcomeTitle"
        android:layout_gravity="right|top"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:id="@+id/WelcomeExplorerTrailInfo"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WelcomeTitle"
        android:layout_gravity="right|top"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:id="@+id/WelcomeQRScannerInfo"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WelcomeTitle"
        android:layout_gravity="right|top"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:id="@+id/WelcomeMapInfo"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/WelcomeTitle"
        android:layout_gravity="right|top"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:id="@+id/WelcomeMoreInfo"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeTrailImage"
        android:layout_gravity="center_horizontal|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeExplorerImage"
        android:layout_gravity="center_horizontal|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeQRImage"
        android:layout_gravity="center_horizontal|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeMapImage"
        android:layout_gravity="center_horizontal|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeInfoImage"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout>