<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:name="riskybusiness.riskybusinessmuseumapp.root.Fragments.SpaceAndTimeFragment"
    android:id="@+id/BugsFragment"
    android:layout_below="@+id/topTableForButtons"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_above="@+id/bottomTableForButtons"
    tools:context="riskybusiness.riskybusinessmuseumapp.root.Fragments.trailFragments.SpaceAndTimeFragment"
    android:focusable="false"
    android:background="@drawable/royal_blue_ipad_wallpaper">

    <!-- TODO: Update blank fragment layout -->

    <TextView android:layout_width="match_parent" android:layout_height="60dp"
        android:text="@string/SpaceTitle"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@color/White"
        android:textSize="24dp"
        android:id="@+id/Title"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spaceIntro"
        android:textColor="@color/White"
        android:textSize="16dp"
        android:id="@+id/subTitle"
        android:layout_gravity="center_horizontal|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Map"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:text="Click Map To Enter"
        android:textSize="14dp"
        android:id="@+id/description"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout>