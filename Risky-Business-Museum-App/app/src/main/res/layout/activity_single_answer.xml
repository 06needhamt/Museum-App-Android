<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="riskybusiness.riskybusinessmuseumapp.root.Activities.SingleAnswerActivity"
    android:background="@drawable/royal_blue_ipad_wallpaper">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Question 1 of n"
            android:textColor="@color/White"
            android:id="@+id/SaTrailPosition"
            android:layout_gravity="left|top"
            android:gravity="center_horizontal|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Score:"
            android:textColor="@color/White"
            android:id="@+id/SaScore"
            android:layout_gravity="right|top"
            android:gravity="center_horizontal|right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="The Oba used this to make contact with the spirits of his ancestors"
            android:id="@+id/SingleAnswerQuestion"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal"
            android:textColor="@color/White"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SingleAnswerQRButton"
            android:layout_gravity="center_horizontal|top"
            android:clickable="true"
            android:baselineAlignBottom="false"
            android:background="@drawable/transparent__icon_qr" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Next Question"
            android:id="@+id/bntSaSkipOrNext"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>
</RelativeLayout>
